)
qr.add_data(qr_data)
qr.make(fit=True)
img = qr.make_image(fill="black", back_color="white")
# Save QR code to a temporary file
temp_dir = tempfile.gettempdir()
qr_path = os.path.join(temp_dir, "vbtn_qr.png")
img.save(qr_path)
